{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["node_modules", "test/**/*.ts"]
}
